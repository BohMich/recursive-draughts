<Window x:Class="recursive_draughts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recursive_draughts"
        mc:Ignorable="d"
        Title="MainWindow" Height="565" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="330" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="346"/>

        <TextBlock Text="{Binding Display}" HorizontalAlignment="Left" Margin="15,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="320" Width="336"/>
        <Button Content="Button_StartNewGame" HorizontalAlignment="Left" Margin="380,15,0,0" VerticalAlignment="Top" Height="80" Width="116"/>

    </Grid>
</Window>
